# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/financetracker?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Docker Configuration
DOCKER_USERNAME=your-docker-hub-username

# Application Configuration
NODE_ENV=production
PORT=5000

# Frontend Configuration
REACT_APP_API_URL=https://your-backend-url.onrender.com/api

# AI API Keys (Optional - for enhanced features)
REACT_APP_GEMINI_API_KEY=your-gemini-api-key
REACT_APP_HUGGING_FACE_TOKEN=your-hugging-face-token
REACT_APP_COHERE_TOKEN=your-cohere-token

# Database Credentials (for Docker Compose)
MONGO_USERNAME=admin
MONGO_PASSWORD=secure-password-123
MONGO_DB=financetracker
